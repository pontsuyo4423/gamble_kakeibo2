<header class="top-page-header">
  <h1 class="header-title">ギャンブル家計簿</h1>
  <nav class="header-nav">
    <ul class="nav-list">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to current_user.name, "#", class: "user-nickname" %>
        </li>
        <li class="nav-item">
          <%= link_to 'ログアウト', destroy_user_session_path, data: {turbo_method: :delete}, class: "logout-btn"%>
        </li>     
      <% else %>
        <li class="nav-item">
          <%= link_to 'ログイン', new_user_session_path, class: "login-btn" %>
        </li>
        <li class="nav-item">
          <%= link_to '新規登録', new_user_registration_path, class: "signup-btn" %>
        </li>
      <% end %>
    </ul>
  </nav>
</header>
